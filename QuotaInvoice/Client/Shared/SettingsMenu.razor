<MudTooltip Text="@UserName">
    <MudMenu>
        <ActivatorContent>
            <Avatar IsAuthenticated="IsAuthenticated" UserName="@UserName"/>
        </ActivatorContent>
        <ChildContent>
            @if (IsAuthenticated)
            {
                <MudMenuItem>Profile</MudMenuItem>
                <MudMenuItem>Theme</MudMenuItem>
                <MudMenuItem>Sign Out</MudMenuItem>
            }
            else
            {
                <MudMenuItem>Log in</MudMenuItem>
            }

        </ChildContent>
    </MudMenu>
</MudTooltip>


@code {
    [Parameter] public string? UserName { get; set; }
    [Parameter] public bool IsAuthenticated { get; set;  }
}
