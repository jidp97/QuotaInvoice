<style>
    .card-ajustment {
        position: relative;
        display: flex;
        flex-direction: row;
        min-width: 0;
        word-wrap: break-word;
        background-clip: border-box;
        border: 1px solid #000000;
        border: 1px solid rgba(0,0,0,.125);
        border-radius: 0.25rem;
        flex-wrap: wrap;
        justify-content: center;
    }

    .card-transition {
        transition: margin 700ms;
    }
</style>
<MudCard Class="primary-card min-card card-ajustment card-transition">
    <MudPaper Elevation="0">
        <MatH6 Class="card-title">@Titulo</MatH6>
        @Cabecera
    </MudPaper>
    @Elementos
    @*      <MudPaper class="card-footer">
        </MudPaper>*@
</MudCard>

@code{
    [Parameter] public RenderFragment Cabecera { get; set; }
    [Parameter] public RenderFragment Elementos { get; set; }
    [Parameter] public string Titulo { get; set; } = string.Empty;
}